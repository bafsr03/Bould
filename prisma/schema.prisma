// overview Prisma schema docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Conversion {
  id              String   @id @default(cuid())
  shopifyProductId String   @unique
  title           String
  imageUrl        String?
  categoryId      Int
  trueSize        String
  unit            String
  trueWaist       String?
  status          String   @default("pending") // pending | processing | completed | failed
  processed       Boolean  @default(false)
  previewImageUrl String?
  sizeScaleUrl    String?
  shopDomain      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  widgetEvents    WidgetEvent[]
}

model WidgetEvent {
  id               String    @id @default(cuid())
  shopifyProductId String
  conversionId     String?
  conversion       Conversion? @relation(fields: [conversionId], references: [id])
  shopDomain       String?
  recommendedSize  String?
  confidence       Float?
  requestId        String?
  correlationId    String?
  createdAt        DateTime  @default(now())

  @@index([shopifyProductId])
  @@index([createdAt])
}

model ShopPlan {
  id                     String   @id @default(cuid())
  shopDomain             String   @unique
  planId                 String
  billingKey             String?
  hasActivePayment       Boolean  @default(false)
  activeSubscriptionId   String?
  activeSubscriptionName String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}
